<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="white.rs.mapper.UserRoleMapper">

    <resultMap id="BaseResultMap" type="white.rs.domain.UserRole">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="assignedBy" column="assigned_by" jdbcType="BIGINT"/>
        <result property="assignedAt" column="assigned_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_id,role_id,
        assigned_by,assigned_at
    </sql>

    <!-- 批量插入用户角色关系 -->
    <insert id="insertBatchSomeColumn">
        INSERT INTO user_role (user_id, role_id, assigned_by, assigned_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.userId}, #{item.roleId}, #{item.assignedBy}, #{item.assignedAt})
        </foreach>
    </insert>
</mapper>