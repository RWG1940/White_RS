<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="white.rs.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="white.rs.domain.Users">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="passwordHash" column="password_hash" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="lastLoginAt" column="last_login_at" jdbcType="TIMESTAMP"/>
        <result property="lastLoginIp" column="last_login_ip" jdbcType="VARCHAR"/>
        <result property="profile" column="profile" jdbcType="OTHER"/>
        <result property="version" column="version" jdbcType="INTEGER"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="updatedAt" column="updated_at" jdbcType="TIMESTAMP"/>
        <result property="deletedAt" column="deleted_at" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,username,email,
        phone,password_hash,status,
        last_login_at,last_login_ip,profile,
        version,created_at,updated_at,
        deleted_at
    </sql>

    <!-- 根据用户名查询用户 -->
    <select id="selectByUsernameWithRoles" resultMap="BaseResultMap">
        SELECT u.id,
               u.username,
               u.email,
               u.phone,
               u.password_hash,
               u.status,
               u.last_login_at,
               u.last_login_ip,
               u.profile,
               u.version,
               u.created_at,
               u.updated_at,
               u.deleted_at
        FROM users u
        WHERE u.username = #{username}
    </select>

    <!-- 根据用户ID查询角色编码列表 -->
    <select id="selectRoleCodesByUserId" resultType="java.lang.String">
        SELECT r.code
        FROM roles r
                 INNER JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
          AND r.status = 1
    </select>

</mapper>
